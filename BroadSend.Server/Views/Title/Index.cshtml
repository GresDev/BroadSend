@inject IHtmlLocalizer<SharedResource> SharedLocalizer

@model IEnumerable<Title>

<partial name="_TitleTitle" />

<div>
    <a class="btn btn-outline-secondary" asp-action="Create" style="margin-bottom: 50px">@SharedLocalizer["ButtonAdd"]</a>
</div>

<div class="content-table">

    <table class="table">
        <thead class="thead-dark text-left">
            <tr>
                <th>@SharedLocalizer["TableHeaderTitleName"]</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var title in Model)
            {
                <tr>
                    <td>@title.Name</td>
                    <td class="d-flex justify-content-end">
                        <a asp-action="Edit" asp-route-id="@title.Id" class="btn btn-outline-secondary btn-sm mr-1">@SharedLocalizer["ButtonEdit"]</a>
                        <a asp-action="Delete" asp-route-id="@title.Id" class="btn btn-outline-secondary btn-sm">@SharedLocalizer["ButtonDelete"]</a>
                    </td>

                </tr>
            }
        </tbody>

    </table>

</div>