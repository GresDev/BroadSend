@inject IHtmlLocalizer<SharedResource> SharedLocalizer


@model DirectorEditViewModel

<div class="form-group">
    <label asp-for="Alias">@SharedLocalizer["TableHeaderAlias"]</label>
    <input asp-for="Alias" class="form-control" />
    <span asp-validation-for="Alias" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Name">@SharedLocalizer["TableHeaderFullName"]</label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>

<div style="margin: 50px 0">
    <button type="submit" class="btn btn-primary">@SharedLocalizer["ButtonSave"]</button>
    <a asp-controller="Director" asp-action="Index" class="btn btn-secondary">@SharedLocalizer["ButtonBackToList"]</a>
</div>