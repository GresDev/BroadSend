@inject IViewLocalizer Localizer

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager


<ul class="navbar-nav">

    <li class="nav-item">
        <span class="navbar-text ml-3"> @UserManager.GetUserName(User)</span>
    </li>
    @if (User.IsInRole("Administrator"))
    {
        <li class="nav-item">
            <a class="nav-link text-light ml-2" asp-area="Admin" asp-controller="Home" asp-action="UserManagement"><i class="fa fa-cog"></i></a>
        </li>
    }

    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new {area = ""})">
            <button id="logout" type="submit" class="btn btn-link text-light"><i class="fas fa-sign-out-alt"></i></button>
        </form>
    </li>
</ul>