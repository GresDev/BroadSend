@inject SignInManager<IdentityUser> SignInManager
@inject IViewLocalizer Localizer

<nav class="navbar navbar-expand-md bg-dark navbar-dark fixed-top" id="main-nav">
    <div class="container">
        <a asp-controller="Home" asp-area="" asp-action="Index" class="navbar-brand">BroadSend</a> |
        @if (SignInManager.IsSignedIn(User))
        {
            <partial name="_LoginPartial" />
        }
        else
        {
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a href="#contactModal" class="nav-link" data-toggle="modal">@Localizer["Registration"]</a>
                </li>
            </ul>
        }
        <button class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <ul class="navbar-nav ml-auto">
                @if (SignInManager.IsSignedIn(User))
                {
                    <li class="nav-item">
                        <a asp-area="" asp-controller="Home" asp-action="Index" asp-fragment="home" class="nav-link">@Localizer["Home"]</a>
                    </li>
                    <li class="nav-item">
                        <a asp-area="" asp-controller="Home" asp-action="Index" asp-fragment="programs-section-head" class="nav-link">@Localizer["Programs"]</a>
                    </li>
                    <li class="nav-item">
                        <a asp-area="" asp-controller="Home" asp-action="Index" asp-fragment="persons-section-head" class="nav-link">@Localizer["Persons"]</a>
                    </li>
                    <li class="nav-item">
                        <a asp-area="" asp-controller="Home" asp-action="Index" asp-fragment="geo-section-head" class="nav-link">@Localizer["Geography"]</a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a href="#home" class="nav-link">@Localizer["Home"]</a>
                    </li>
                    <li class="nav-item">
                        <a href="#programs-section-head" class="nav-link ">@Localizer["Programs"]</a>
                    </li>
                    <li class="nav-item">
                        <a href="#persons-section-head" class="nav-link">@Localizer["Persons"]</a>
                    </li>
                    <li class="nav-item">
                        <a href="#geo-section-head" class="nav-link">@Localizer["Geography"]</a>
                    </li>
                }
            </ul>
        </div>
    </div>
</nav>