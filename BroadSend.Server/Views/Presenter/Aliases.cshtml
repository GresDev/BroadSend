@inject IHtmlLocalizer<SharedResource> SharedLocalizer

@model IEnumerable<PresenterAlias>

<partial name="_PresenterTitle"/>


@if (ViewBag.ErrorMessage != string.Empty)
{
    <h3 class="alert-danger">@ViewBag.ErrorMessage</h3>
    <a asp-controller="Presenter" asp-action="index" class="btn btn-secondary">@SharedLocalizer["ButtonBackToPresenters"]</a>
}
else
{
    <h3>@ViewBag.PresenterName</h3>
    <h4>@SharedLocalizer["HeaderEditAliasesList"]</h4>


    <div>
        <a class="btn btn-success" asp-action="AliasCreate" asp-route-id="@ViewBag.PresenterId" style="margin: 50px 0px">@SharedLocalizer["ButtonAdd"]</a>
        <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@ViewBag.PresenterId" style="margin: 50px 0px">@SharedLocalizer["ButtonBack"]</a>
    </div>

    <div style="height: 500px; width: auto; margin-right: 250px; overflow: auto;">

        <table class="table">

            <thead class="thead-light text-left">
            <tr>
                <th>@SharedLocalizer["TableHeaderAlias"]</th>
                <th></th>
            </tr>
            </thead>

            <tbody>
            @foreach (var alias in Model)
            {
                <tr>
                    <td>@alias.Alias</td>
                    <td>
                        <a asp-action="AliasEdit" asp-route-id="@alias.Id">@SharedLocalizer["ButtonEdit"]</a> |
                        <a asp-action="AliasDelete" asp-route-id="@alias.Id">@SharedLocalizer["ButtonDelete"]</a>
                    </td>

                </tr>
            }
            </tbody>

        </table>

    </div>
}