@inject IHtmlLocalizer<SharedResource> SharedLocalizer

@model AddUserViewModel

<div class="form-group">
    <label asp-for="@Model.UserName">@SharedLocalizer["TableHeaderUserName"]</label>
    <input asp-for="@Model.UserName" class="form-control" />
    <div class="validation-message">
        <span asp-validation-for="@Model.UserName" class="text-danger"></span>
    </div>
</div>

<div class="form-group">
    <label asp-for="@Model.Email">@SharedLocalizer["TableHeaderEmail"]</label>
    <input asp-for="@Model.Email" class="form-control" />
    <div class="validation-message">
        <span asp-validation-for="@Model.Email" class="text-danger"></span>
    </div>
</div>
<div class="form-group">
    <label asp-for="@Model.Password">@SharedLocalizer["TableHeaderPassword"]</label>
    <input asp-for="@Model.Password" class="form-control" rows="5"></input>
    <div class="validation-message">
        <span asp-validation-for="@Model.Password" class="text-danger"></span>
    </div>
</div>
<div class="form-group">
    <label asp-for="@Model.PasswordToConfirm">@SharedLocalizer["TableHeaderPasswordConfirm"]</label>
    <input asp-for="@Model.PasswordToConfirm" class="form-control" rows="5"></input>
    <div class="validation-message">
        <span asp-validation-for="@Model.PasswordToConfirm" class="text-danger"></span>
    </div>
</div>

<hr />

<div class="form-group">
    <label asp-for="@Model.Roles">@SharedLocalizer["TableHeaderRole"]</label>
    <select asp-for="SelectedRole" class="form-control">
        @foreach (var role in @Model.Roles)
        {
            <option>@role.Name</option>
        }
    </select>
</div>


<div style="margin: 50px 0">
    <button type="submit" class="btn btn-outline-secondary">@SharedLocalizer["ButtonSave"]</button>
    <a asp-area="Admin" asp-controller="Home" asp-action="UserManagement" class="btn btn-outline-secondary">@SharedLocalizer["ButtonBackToList"]</a>
</div>
