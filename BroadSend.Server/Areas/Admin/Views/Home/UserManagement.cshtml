@inject IHtmlLocalizer<SharedResource> SharedLocalizer

@model IEnumerable<IdentityUser>

<partial name="_AdminTitle" />

<partial name="_UserManagementTitle" />

<div>
    <a class="btn btn-outline-secondary" asp-action="AddUser" style="margin: 50px 0px">@SharedLocalizer["ButtonAdd"]</a>
</div>

<div class="content-table">

    <table class="table">
        <thead class="thead-dark text-left">
            <tr>
                <th>@SharedLocalizer["TableHeaderUserName"]</th>
                <th>@SharedLocalizer["TableHeaderEmail"]</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (IdentityUser identityUser in Model)
            {
                <tr>
                    <td>@identityUser.UserName</td>
                    <td>@identityUser.Email</td>
                    <td class="d-flex justify-content-end">
                        <input type="hidden" asp-for="@identityUser.Id" />
                        <a asp-action="EditUser" asp-route-userId="@identityUser.Id" class="btn btn-outline-secondary btn-sm mr-1">@SharedLocalizer["ButtonEdit"]</a>
                        <a asp-action="ChangePassword" asp-route-userId="@identityUser.Id" class="btn btn-outline-secondary btn-sm mr-1">@SharedLocalizer["ButtonChangePassword"]</a>
                        <a asp-action="DeleteUser" asp-route-userId="@identityUser.Id" class="btn btn-outline-secondary btn-sm">@SharedLocalizer["ButtonDelete"]</a>
                    </td>
                </tr>
            }
        </tbody>

    </table>

</div>