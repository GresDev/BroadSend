@inject IHtmlLocalizer<SharedResource> SharedLocalizer

@model ChangePasswordViewModel

<partial name="_AdminTitle" />

<partial name="_UserManagementTitle" />

<partial name="_EditItem" />

<h3>@Model.UserName</h3>
<h3 style="margin-bottom: 50px">@Model.Email</h3>



<div style="width: 50%">

    <form asp-area="Admin" asp-controller="Home" asp-action="ChangePassword">

        <div class="form-group">
            <label asp-for="@Model.Password">@SharedLocalizer["TableHeaderNewPassword"]</label>
            <input asp-for="@Model.Password" class="form-control" />
            <span asp-validation-for="@Model.Password" class="text-danger"></span>
        </div>

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="@Model.PasswordToConfirm">@SharedLocalizer["TableHeaderPasswordConfirm"]</label>
            <input asp-for="@Model.PasswordToConfirm" class="form-control" />
            <span asp-validation-for="@Model.PasswordToConfirm" class="text-danger"></span>
        </div>

        <div style="margin: 50px 0">
            <button type="submit" class="btn btn-primary">@SharedLocalizer["ButtonSave"]</button>
            <a asp-area="Admin" asp-controller="Home" asp-action="UserManagement" class="btn btn-secondary">@SharedLocalizer["ButtonBackToList"]</a>
        </div>

        <input type="hidden" asp-for="UserName" />
        <input type="hidden" asp-for="Email" />

    </form>

</div>